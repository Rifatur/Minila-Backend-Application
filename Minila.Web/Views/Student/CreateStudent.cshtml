
@{
    ViewData["Title"] = "CreateStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
          <div class="col-lg-12 mt-4">
              <div class="card-style settings-card-2 mb-30">
                <div class="title mb-30">
                  <h6>My Profile</h6>
                </div>
                <form asp-action="CreateStudent">
                  <div class="row">
                     <div class="row">
                        <div class="col-6">
                          <div class="input-style-1">
                            <label for="FirstName">First Name</label>
                            <input type="text" placeholder="First Name" name="FirstName" id="FirstName"/>
                          </div>
                        </div>
                        <div class="col-6">
                          <div class="input-style-1">
                            <label for="LastName">Last Name</label>
                            <input type="text" placeholder="Last Name" name="LastName" id="LastName"/>
                          </div>
                        </div>
                     </div>

                    <div class="col-12">
                      <div class="input-style-1">
                        <label for="Email">Email</label>
                        <input type="email" placeholder="Email" name="Email" id="Email"/>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="input-style-1">
                        <label for="Password">Password</label>
                        <input type="text" placeholder="Password" name="Password" id="Password"/>
                      </div>
                    </div>
                     <div class="row">
                        <div class="col-6">
                          <div class="input-style-1">
                            <label for="PhoneNumber" >Phone Number</label>
                            <input type="text" placeholder="Phone Number" id="PhoneNumber" name="PhoneNumber"/>
                          </div>
                        </div>
                        <input type="text" value="@ViewBag.Code" id="UserCode" name="UserCode" hidden/>
                        <div class="col-6">
                          <div class="input-style-1">
                            <label for="NationalID">School Id</label>
                            <input type="text" name="SchoolId" id="SchoolId" placeholder="School Id" />
                          </div>
                        </div>
                     </div>
                     <input type="text" value="@ViewBag.Date" id="CreateDate" name="CreateDate" hidden/>
                    <div class="col-12">
                      <input type="submit" value="Create Profile" class="main-btn primary-btn btn-hover" />
                    </div>
                  </div>
                </form>
              </div>
              <!-- end card -->
            </div>
            <!-- end col -->
</div>
<!-- end row -->


