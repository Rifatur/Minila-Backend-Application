@model IEnumerable<Minila.Web.Models.ParentWebModel>
@{
    ViewData["Title"] = "Parenlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
          <!-- ========== title-wrapper start ========== -->
          <div class="title-wrapper pt-30">
            <div class="row align-items-center">
              <div class="col-md-6">
                <div class="title mb-30">
                  <h2>All Parent List</h2>
                </div>
              </div>
              <!-- end col -->
              <div class="col-md-6">
                <div class="breadcrumb-wrapper mb-30">
                  <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item">
                        <a href="#0">Dashboard</a>
                      </li>
                      <li class="breadcrumb-item active" aria-current="page">
                        parent
                      </li>
                    </ol>
                  </nav>
                </div>
              </div>
              <!-- end col -->
            </div>
            <!-- end row -->
          </div>
          <!-- ========== title-wrapper end ========== -->

                   <!-- Start Row  -->
                    <div class="row">
                      <div class="col-lg-12">
                        <!-- start Rank Table -->
                        <div class="card-style mb-30">
                          <h6 class="mb-8"></h6>
                          <!-- <p class="text-sm mb-20">
                            Use one of two modifier classes to make thead appear light
                            or dark gray.
                          </p> -->
                          <div class="table-wrapper table-responsive">
                            <table class="table striped-table">
                              <thead>
                                <tr>
                                  <th>ID</th>
                                  <th><h6>Name</h6></th>
                                  <th><h6>Email</h6></th>
                                  <th><h6>PhoneNumber</h6></th>
                                  <th><h6>NationalID</h6></th>
                                  <th><h6>Status</h6></th>
                                  <th><h6></h6></th>
                                </tr>
                                <!-- end table row-->
                              </thead>
                              <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                  <td>
                                    <h6 class="text-sm">@item.id</h6>
                                  </td>
                                  <td>
                                    <p>@item.FirstName @item.LastName </p>
                                  </td>
                                  <td>
                                    <p>@item.Email</p>
                                  </td>
                                  <td>
                                    <p>@item.PhoneNumber</p>
                                  </td>
                                   <td>
                                    <p>@item.NationalID</p>
                                  </td>
                                   <td>
                                    @if (@item.Status)
                                    {
                                        <p>Active</p>
                                    }
                                    else
                                    {
                                        <p>Deactive</p>
                                    }
                                </td>
                                  <td>
                                    <div class="action justify-content-end">
                                      <a asp-controller="Parent" asp-action="ParentDetails" asp-route-id="@item.id" class="edit">
                                        <i class="lni lni-pencil"></i>
                                      </a>
                                      <button
                                        class="more-btn ml-10 dropdown-toggle"
                                        id="moreAction1"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false"
                                      >
                                        <i class="lni lni-more-alt"></i>
                                      </button>
                                      <ul
                                        class="dropdown-menu dropdown-menu-end"
                                        aria-labelledby="moreAction1"
                                      >
                                        <li class="dropdown-item">
                                          <a href="#0" class="text-gray">Remove</a>
                                        </li>
                                        <li class="dropdown-item">
                                          <a href="#0" class="text-gray">Edit</a>
                                        </li>
                                      </ul>
                                    </div>
                                  </td>
                                </tr> 
                                }
                                <!-- end table row -->
                              </tbody>
                            </table>
                            <!-- end table -->
                          </div>
                        </div>
                        <!-- end card -->
                      </div>
                      </div>
                      <!-- End Col -->
                    </div>
                    <!-- End Row -->