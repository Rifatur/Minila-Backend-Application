@model RidingApp.DataAccess.Entities.ApplicationUser
@{
    ViewData["Title"] = @Model.FirstName ;
}
      <section class="section">
        <div class="container-fluid">
          <!-- ========== title-wrapper start ========== -->
          <div class="title-wrapper pt-30">
            <div class="row align-items-center">
              <div class="col-md-6">
                <div class="titlemb-30">
                  <h2>Settings</h2>
                </div>
              </div>
              <!-- end col -->
              <div class="col-md-6">
                <div class="breadcrumb-wrapper mb-30">
                  <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item">
                        <a href="#0">Dashboard</a>
                      </li>
                      <li class="breadcrumb-item"><a href="#0">Pages</a></li>
                      <li class="breadcrumb-item active" aria-current="page">
                        UpdateUser
                      </li>
                    </ol>
                  </nav>
                </div>
              </div>
              <!-- end col -->
            </div>
            <!-- end row -->
          </div>
          <!-- ========== title-wrapper end ========== -->

          <div class="row">
            <div class="col-lg-6">
              <div class="card-style settings-card-1 mb-30">
                <div
                  class="
                    title
                    mb-30
                    d-flex
                    justify-content-between
                    align-items-center
                  "
                >
                  <h6>My Profile</h6>
                  <button class="border-0 bg-transparent">
                    <i class="lni lni-pencil-alt"></i>
                  </button>
                </div>
                <div class="profile-info">
                  <div class="d-flex align-items-center mb-30">
                    <div class="profile-image">
                      <img src="assets/images/profile/profile-1.png" alt="" />
                      <div class="update-image">
                        <input type="file" />
                        <label for=""
                          ><i class="lni lni-cloud-upload"></i
                        ></label>
                      </div>
                    </div>
                    <div class="profile-meta">
                      <h5 class="text-bold text-dark mb-10">@Model.FirstName @Model.LastName</h5>
                      <p class="text-sm text-gray">@Model.Role</p>
                    </div>
                  </div>

                </div>
              </div>
              <!-- end card -->
            </div>
            <!-- end col -->

            <div class="col-lg-6">
              <div class="card-style settings-card-2 mb-30">
                <div class="title mb-30">
                </div>
                <form action="#">
                  <div class="row">

                    <div class="col-xxl-6">
                      <div class="input-style-1">
                        <label>FirstName</label>
                        <input type="text" value="@Model.FirstName"  name="FirstName" id="FirstName"/>
                      </div>
                    </div>
                    <div class="col-xxl-6">
                      <div class="input-style-1">
                        <label>LastName</label>
                        <input value="@Model.LastName"  name="LastName" id="LastName"/>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="input-style-1">
                        <label>Email</label>
                        <input type="email" value="@Model.Email" name="Email" id="Email"/>
                      </div>
                    </div>
                    <div class="select-style-1 col-12">
                        <label for="RoleSelected">System Role </label>
                        <div class="select-position">
                          <select name="RoleSelected" id="RoleSelected" for="RoleSelected" asp-items="@Model.RoleList" >
                            <option disabled selected > -- Select Role -- </option>

                          </select>
                        </div>
                    </div>
                    <div class="col-12">
                      <div class="input-style-1">
                        <label>Mobile</label>
                        <input type="text" value="@Model.PhoneNumber" name="PhoneNumber" id="PhoneNumber"/>
                      </div>
                    </div>

                    <div class="col-12">
                      <button class="main-btn primary-btn btn-hover">
                        Update Profile
                      </button>
                    </div>
                  </div>
                </form>
              </div>
              <!-- end card -->
            </div>
            <!-- end col -->
          </div>
          <!-- end row -->
        </div>
        <!-- end container -->
      </section>